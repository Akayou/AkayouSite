@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PreCadastro/Views/Shared/_Master.cshtml";
}

@section Css {
    .texto {
        height: 100px;
        margin-top: 30px;
    }
    .texto p {
        text-align: center;
        width: 700px;
        margin-left: auto;
        margin-right: auto;
    }
    .opcoes {
        margin-top: 40px;
        height: 65px;
        width: 690px;
        margin-left: auto;
        margin-right: auto;
    }
    .opcoes .left {
        float: left;
    }
    .opcoes .right {
        float: right;
    }
    .msg.login {
        left: 355px;
    }
    .msg.login a.esqueci {
        float: right;
        display: block;
    }
    .msg.login .box {
        height: 110px;
    }
    .msg.login .field img.acessar {
        cursor: pointer;
    }
    #acessarPerfil {
        cursor: pointer;
    }
}

@section Script {
    $(document).ready(function() {
        $('#acessarPerfil').click(function() {
            showBox('.msg.login');
        });
    });
}

